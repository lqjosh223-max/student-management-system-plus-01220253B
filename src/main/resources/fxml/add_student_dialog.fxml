<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.sms.ui.AddStudentController"
          prefWidth="500" prefHeight="450"
          hgap="15" vgap="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Add New Student" GridPane.columnSpan="2" styleClass="dialog-title"/>

    <!-- Row 1: Student ID -->
    <Label text="Student ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="studentIdField" promptText="e.g., CS2024001" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <!-- Row 2: Full Name -->
    <Label text="Full Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="fullNameField" promptText="e.g., John Doe" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <!-- Row 3: Programme -->
    <Label text="Programme:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ComboBox fx:id="programmeField" promptText="Computer Science" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <!-- Row 4: Level -->
    <Label text="Level:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <ComboBox fx:id="levelField" promptText="200" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <!-- Row 5: GPA -->
    <Label text="GPA:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="gpaField" promptText="3.5" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <!-- Row 6: Email -->
    <Label text="Email:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" promptText="john@example.com" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <!-- Row 7: Phone -->
    <Label text="Phone:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" promptText="1234567890" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <!-- Row 8: Status -->
    <Label text="Status:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <ComboBox fx:id="statusField" promptText="Active" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <!-- Buttons -->
    <HBox spacing="10" GridPane.rowIndex="9" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
        <Button text="Cancel" fx:id="cancelButton" styleClass="btn-secondary"/>
        <Button text="Add Student" fx:id="addButton" styleClass="btn-primary"/>
    </HBox>

</GridPane>